<UserControl x:Class="FN.Framtal.UserControls.Chapter2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FN.Framtal.UserControls"
             mc:Ignorable="d" 
             Width="26"
             Height="24"
             >

    <Border BorderThickness="1 1 0 1" Background="{DynamicResource LightBrush}">
        <TextBlock x:Name="ChapterNumberTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{DynamicResource Chapter2PrefixTextFontSize}" FontWeight="Bold"/>
    </Border>
</UserControl>
