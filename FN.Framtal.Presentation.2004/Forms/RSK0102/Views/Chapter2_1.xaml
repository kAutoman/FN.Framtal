        </Border>

        <Border Grid.Column="2" Grid.Row="6" Background="{StaticResource DefaultBrush}" BorderThickness="0 1 1 1">
            <TextBlock VerticalAlignment="Center" TextAlignment="Center">27</TextBlock>
        </Border>

        <Border Grid.Column="3" Grid.Row="6" Background="{StaticResource LightBrush}" BorderThickness="0 1 1 1" Padding="3">
